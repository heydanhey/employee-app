<h1> Enter Employee Information </h1>

<%= form_tag '/submit', method: :post do %>

  <div>
    <%= label_tag :first_name %>
    <%= text_field_tag :first_name %>
  </div>

  <div>
    <%= label_tag :last_name %>
    <%= text_field_tag :last_name %>
  </div>


  <div>
    <%= submit_tag 'Send Message' %>
  </div>


<% end %>